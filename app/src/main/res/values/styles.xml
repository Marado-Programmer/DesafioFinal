<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="HeaderLogo" parent="Theme.DesafioFinal">
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:src">@drawable/logo_epcc</item>
<item name="android:gravity">center</item>
<item name="android:layout_centerHorizontal">true</item>
<item name="android:layout_margin">@dimen/header_margin</item>
</style>

<style name="HeaderLogoLand" parent="Theme.DesafioFinal">
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:src">@drawable/logo_epcc</item>
<item name="android:gravity">center</item>
<item name="android:layout_centerHorizontal">true</item>
<item name="android:layout_margin">@dimen/header_margin</item>
</style>

<style name="HeaderTitle" parent="Theme.DesafioFinal">
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:text">EPCC</item>
<item name="android:textColor">@color/white</item>
<item name="android:textSize">@dimen/h1</item>
<item name="android:layout_centerHorizontal">true</item>
<item name="android:paddingTop">@dimen/header_margin</item>
<item name="android:paddingBottom">@dimen/header_margin</item>
<item name="android:paddingRight">@dimen/header_margin</item>
<item name="android:paddingLeft">@dimen/header_margin</item>
<item name="android:layout_below">@+id/logo</item>
</style>

<style name="HeaderTitleLand" parent="HeaderTitle">
<item name="android:textSize">@dimen/h6</item>
<item name="android:padding">0dp</item>
</style>

<style name="HumanButton" parent="Theme.DesafioFinal">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">match_parent</item>
<item name="android:layout_weight">1</item>
<item name="android:layout_margin">5dp</item>
</style>

<style name="HumanButtonLand" parent="Theme.DesafioFinal">
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:layout_weight">1</item>
<item name="android:layout_centerInParent">true</item>
</style>

<style name="TeacherButton" parent="HumanButton">
<item name="android:background">@color/white</item>
<item name="android:textColor">@color/red_500</item>
<item name="android:text">@string/professores</item>
<item name="android:textSize">@dimen/h2</item>
</style>

<style name="TeacherButtonLand" parent="HumanButtonLand">
<item name="android:background">@color/white</item>
<item name="android:textColor">@color/red_500</item>
<item name="android:text">@string/professores</item>
<item name="android:textSize">@dimen/h3</item>
</style>

<style name="TeacherButtonLandOut" parent="HumanButton">
<item name="android:background">@color/red_500</item>
<item name="android:textColor">@color/red_500</item>
<item name="android:text">@string/professores</item>
<item name="android:textSize">@dimen/h3</item>
<item name="android:layout_margin">0dp</item>
</style>

<style name="StudentButton" parent="HumanButton">
<item name="android:background">@color/red_500</item>
<item name="android:textColor">@color/white</item>
<item name="android:text">@string/alunos</item>
<item name="android:textSize">@dimen/h2</item>
</style>

<style name="StudentButtonLand" parent="HumanButtonLand">
<item name="android:background">@color/red_500</item>
<item name="android:textColor">@color/white</item>
<item name="android:text">@string/alunos</item>
<item name="android:textSize">@dimen/h3</item>
</style>

<style name="StudentButtonLandOut" parent="HumanButton">
<item name="android:background">@color/white</item>
<item name="android:textColor">@color/white</item>
<item name="android:text">@string/alunos</item>
<item name="android:textSize">@dimen/h3</item>
<item name="android:layout_margin">0dp</item>
</style>

<dimen name="header_margin">16dp</dimen>
<dimen name="header_margin_mini">5dp</dimen>
<dimen name="display1">159sp</dimen>
<dimen name="display2">119sp</dimen>
<dimen name="h1">89sp</dimen>
<dimen name="h2">67sp</dimen>
<dimen name="h3">50sp</dimen>
<dimen name="h4">37sp</dimen>
<dimen name="h5">28sp</dimen>
<dimen name="h6">21sp</dimen>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderLogo" parent="Theme.DesafioFinal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/logo_epcc</item>
        <item name="android:contentDescription">@string/epcc_logo</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="HeaderTitle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">EPCC</item>
        <item name="background">@color/purple_700</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_below">@+id/logo</item>
    </style>
</resources>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.DesafioFinal" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/gray</item>
    </style>
    <style name="Theme.DesafioFinal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.DesafioFinal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DesafioFinal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
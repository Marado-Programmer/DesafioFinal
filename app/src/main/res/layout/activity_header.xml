<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

<ScrollView
	android:layout_width="match_parent"
	android:layout_height="match_parent">

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

<include layout="@layout/header_layout" />

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:text="@string/app_name"
	android:textColor="@color/white" />

<include
	layout="@layout/schedule"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center" />

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:text="@string/contacts"
	android:textColor="@color/white" />

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:text="@string/name"
	android:textColor="@color/white" />

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:text="@string/street"
	android:textColor="@color/white" />

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:text="@string/postal_code"
	android:textColor="@color/white" />

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:text="@string/country_district"
	android:textColor="@color/white" />

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:text="@string/nif"
	android:textColor="@color/white" />

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:text="@string/telephone"
	android:textColor="@color/white" />

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:text="@string/email"
	android:textColor="@color/white" />
</LinearLayout>

<ImageView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:contentDescription="@string/madeira_logos"
	android:src="@drawable/madeira_14_20" />

<ImageView
	android:layout_width="match_parent"
	android:layout_height="72dp"
	android:contentDescription="@string/eco_escolas"
	android:src="@drawable/logo_eco_escolas" />
</LinearLayout>
</ScrollView>

<Button
	android:id="@+id/visit"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:text="@string/visit_website" />
</RelativeLayout>